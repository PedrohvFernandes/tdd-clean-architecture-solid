{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,

    // Url
    "baseUrl": "src",
    // Os paths tem como base o baseUrl
    "paths": {
      // @/* -> src/*
      // "@/*": ["*"],
      "@/assets/*": ["assets/*"],
      "@/config/*": ["config/*"],
      "@/infra/*": ["infra/*"],
      "@/data/*": ["data/*"],
      "@/domain/*": ["domain/*"],
      "@/utils/*": ["utils/*"],
      "@/main/*": ["main/*"],
      "@/hooks/*": ["main/hooks/*"],
      "@/presentation/*": ["main/presentation/*"],
      "@/components/*": ["main/presentation/components/*"],
      "@/contexts/*": ["main/presentation/contexts/*"],
      "@/layouts/*": ["main/presentation/layouts/*"],
      "@/pages/*": ["main/presentation/pages/*"],
      "@/protocols/*": ["main/presentation/protocols/*"],
      "@/validation/*": ["validation/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
